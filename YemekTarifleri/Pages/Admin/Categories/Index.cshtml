@page
@model YemekTarifleri.Pages.Admin.Categories.IndexModel
@{
    ViewData["Title"] = "Kategori Yönetimi";
    Layout = "/Pages/Admin/_Layout.cshtml";
}

@* --- HATA MESAJI ALANI (Silme Kontrolü İçin) --- *@
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
@* ------------------------- *@

<div class="container mt-4">
    <h3 class="mb-4">@ViewData["Title"]</h3>

    <p>
        <a asp-page="Create" class="btn btn-primary">Yeni Kategori Ekle</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Category[0].Name)
                    </th>
                    <th>
                        Üst Kategori
                    </th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Category)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParentCategory.Name)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>