@{
    // Admin sayfaları için özel layout. Sol menü/kategori çağrılmaz.
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Paneli</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YemekTarifleri.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        @* YÖNETİM PANELİ NAVBAR'I *@
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-warning" asp-area="" asp-page="/Admin/Index"><i class="bi bi-gear-fill"></i> YÖNETİM PANELİ</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar" aria-controls="adminNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="adminNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @* YÖNETİM LİNKLERİ BURADA *@
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Admin/Categories/Index"><i class="bi bi-tag-fill"></i> Kategoriler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Admin/Recipes/Index"><i class="bi bi-book-fill"></i> Tarifler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Admin/Users/Index"><i class="bi bi-people-fill"></i> Kullanıcılar</a>
                        </li>
                    </ul>

                    @* KULLANICI BİLGİSİ VE ÇIKIŞ *@
                    <ul class="navbar-nav">
                        <li class="nav-item me-3">
                            <a class="nav-link text-info" asp-area="" asp-page="/Index"><i class="bi bi-house-fill"></i> Ana Site</a>
                        </li>
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("Username")))
                        {
                            <li class="nav-item">
                                <span class="nav-link text-success"><i class="bi bi-person-fill"></i> Merhaba, @Context.Session.GetString("Username")</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Logout">Çıkış Yap</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div class="card bg-light p-4 shadow-sm">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Yönetim Paneli
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>