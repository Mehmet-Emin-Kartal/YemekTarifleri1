@page
@model YemekTarifleri.Pages.Admin.Recipes.IndexModel
@{
    ViewData["Title"] = "Tarif Yönetimi";
    Layout = "/Pages/Admin/_Layout.cshtml";
}

<div class="container mt-4">
    <h3 class="mb-4">@ViewData["Title"]</h3>

    <p>
        <a asp-page="Create" class="btn btn-primary">Yeni Tarif Ekle</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Recipe[0].Title)
                    </th>
                    <th>
                        Kategori
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Recipe[0].AverageRating)
                    </th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Recipe)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AverageRating)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>