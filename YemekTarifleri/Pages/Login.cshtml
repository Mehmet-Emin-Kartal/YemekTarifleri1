@page
@model YemekTarifleri.Pages.LoginModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-header bg-success text-white">
                <h3 class="text-center">@ViewData["Title"]</h3>
            </div>
            <div class="card-body p-4">

                <form method="post">

                    @* Genel Hata Mesajları *@
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    @* Kullanıcı Adı *@
                    <div class="form-group mb-3">
                        <label asp-for="Input.Username" class="form-label"></label>
                        <input asp-for="Input.Username" class="form-control" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>

                    @* Şifre *@
                    <div class="form-group mb-3">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    @* Beni Hatırla *@
                    <div class="form-group form-check mb-4">
                        <input asp-for="Input.RememberMe" type="checkbox" class="form-check-input" />
                        <label asp-for="Input.RememberMe" class="form-check-label"></label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg">Giriş</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <p class="mb-0">Hesabın yok mu? <a asp-page="./Register">Hemen Kaydol</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}